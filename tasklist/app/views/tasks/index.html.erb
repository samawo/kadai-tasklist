<h1>タスク一覧</h1>

<% if @tasks.any? %>
 <table class="table table-striped">
  <thead>
   <tr>
    <th>id</th>
    <th>タスク</th>
    <th>ステータス</th>
   </tr>
  </thead>
  <tbody>
 </table>
 <% @tasks.each do |task| %>
  <tr>
   <td>
    <%= link_to task.id,task %>
   </td>
   <td>
    <%= message.content %>
   </td>
   <td>
    <%= message.status %>
   </td>
  </tr>
 <% end %>
 </tbody>
 </table>
<%= link_to "新規タスクの登録",new_task_path,class: "btn btn-primary" %>